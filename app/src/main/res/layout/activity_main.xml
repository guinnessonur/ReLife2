<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#E0C8A6"
    tools:context="com.relife.relife.MainActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/nature"
        android:id="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:paddingBottom="25dp"
        tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/textextext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/imageView"
            android:paddingLeft="25dp"
            android:text="ReLife Scheduler"
            android:textColor="#574338"
            android:textAlignment="center"
            android:textSize="20sp"
            />
    <LinearLayout
        android:paddingBottom="20dp"
        android:layout_below="@id/textextext"
        android:id="@+id/laylaylay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:text="My Activities"
            android:id="@+id/button1"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:text="Create New Schedule"
            android:id="@+id/button2"
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:background="@drawable/scroll"
        android:layout_below="@id/laylaylay">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/list"/>
    </ScrollView>
</RelativeLayout>
